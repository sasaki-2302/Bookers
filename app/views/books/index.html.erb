<body>
 <p class="message">
  <%= flash[:notice] %>
 </p>

 <h1 class="bodyt">Books</h1>

 <table>
  <thead>
   <tr>
    <th><strong>Title</strong></th>
    <th><strong>Body</strong></th>
    <th></th>
    <th></th>
    <th></th>
   </tr>
  </thead>

  <tbody>
   <tr><% @books.each do |book| %>
    <td><%= book.title %></td>
    <td><%= book.body %></td>
    <div class="link">
     <td><%= link_to "Show", book_path(book.id) %></td>
     <td><%= link_to "Edit", edit_book_path(book.id)  %></td>
     <td><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sureï¼Ÿ" %></td>
    </div>
   </tr>
   <% end %>
  </tbody>
 </table>

<h2 class="newbook">New book</h2>
<% if @book.errors.any? %>
 <div class="message_x">
  <%= @book.errors.count %> errors prohibited this book from being saved:
  <ul>
   <% @book.errors.full_messages.each do |messages| %>
   <li><%= messages %></li>
   <% end %>
  </ul>
 </div>
<% end %>

<%= form_with model: @book do |f| %>
<div class="text">
 <div>Title</div>
 <%= f.text_field :title %>
</div>

<div class="text">
 <div>Body</div>
 <%= f.text_area :body %><br>
</div>

<div class="text">
 <%= f.submit 'Create Book' %>
</div>
<% end %>
</body>