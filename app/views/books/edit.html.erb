<body>
 <h1 class="bodyt">Editing Book</h1>

 <% if @book.errors.any? %>
 <div class="message_x">
  <%= @book.errors.count %> errors prohibited this book from being saved:
 <ul>
  <% @book.errors.full_messages.each do |messages| %>
   <li><%= messages %></li>
  <% end %>
 </ul>
 <% end %>
 </div>

<%= form_with model: @book do |f|%>
 <div class="text">
  <div>Title</div>
  <%= f.text_field :title %>
 </div>

 <div class="text">
  <div>Body</div>
   <div><%= f.text_area :body %></div>
 </div>
 <div class="text"><%= f.submit 'Update Book' %></div>
 <% end %>
 <%= link_to "Show", book_path(@book.id) %>|<%= link_to"Back", "/books" %>

</body>